
@{
    ViewBag.Title = "AddBill";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="back-add-type" ng-controller="BillImportController">
    <div class="import-product-type">
        <table style="width:100%;text-align:center">
            <tr class="row-list">
                <td>Thông tin</td>
                <td><a href="/Admin/ManagerBillimport/Index">Quay lại</a></td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Mã nhà cung cấp</td>
                <td>
                    <select ng-model="hd.MaNCC" class="select-code">
                        <option ng-repeat="e in dataSup" title="{{e.TenNCC}} | SDT:{{e.SDT}}">{{e.MaNCC}}</option>
                    </select>
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Tổng tiền</td>
                <td>
                    <input type="number" class="product-type-input" ng-model="hd.TongTien">
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Ngày nhập</td>
                <td>
                    <input type="date" class="product-type-input" ng-model="hd.NgayNhap">
                </td>
            </tr>
            <tr>
                <td>
                    <button class="btn-add" ng-click="saveBill()"><i class="fas fa-plus"></i>Thêm mới</button>
                </td>
                <td></td>
            </tr>
        </table>
    </div>
</div>

