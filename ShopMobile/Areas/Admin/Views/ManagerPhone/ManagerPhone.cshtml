  
@{
    ViewBag.Title = "ManagerPhone";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Assets/Admin/css/manager.css" rel="stylesheet" />

<div class="contain-table" ng-controller="HomeController">
    <div class="section-product_type" id="Id-product-type">
        <div class="product_type_list">
            <div class="add-product-type">
                <ul class="nav-search">
                    <h3>Điện Thoại</h3>
                    <li>
                        <a href="/Admin/ManagerPhone/AddPhone">
                            <button type="button" id="Id_add_type" class="btn_add button-add-type color-green">
                                <svg class="svg-type">
                                    <rect class="rect-type" x="0" y="0" fill="none" width="100%" height="100%" />
                                </svg>Thêm điện thoại
                            </button>
                        </a>
                    </li>
                    <li>
                        <input type="text" class="form-search form-control" placeholder="Search" ng-model="searchText">
                        <i class="fas fa-search"></i>
                    </li>
                </ul>
            </div>
            <div class="product_type_cen">
                <form>
                    <table class="table-product_type" id="table_type">
                        <tr>
                            <th>Mã điện thoại</th>
                            <th>Tên điện thoại</th>
                            <th>Mã loại</th>
                            <th>Hình ảnh</th>
                            <th>Màn hình</th>
                            <th>Độ phân giải</th>
                            <th>Hệ điều hành</th>
                            <th>Chip</th>
                            <th>Cam trước</th>
                            <th>Cam sau</th>
                            <th>Pin</th>
                            <th>Sim</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                        <tr ng-repeat="e in DTdata  | filter: searchText  " ng-class-even="even" ng-class-odd="odd">
                            <td>{{e.MaDienThoai}}</td>
                            <td>{{e.TenDienThoai}}</td>
                            <td>{{e.MaLoai}}</td>
                            <td><img src="~/Assets/Client/img/product/{{e.HinhAnh}}" style="width:50px" /></td>
                            <td>{{e.KichThuocManHinh}}</td>
                            <td>{{e.DoPhanGiai}}</td>
                            <td>{{e.HeDieuHanh}}</td>
                            <td>{{e.ChipXuLy}}</td>
                            <td>{{e.CameraTruoc}}</td>
                            <td>{{e.CameraSau}}</td>
                            <td>{{e.DungLuongPin}}</td>
                            <td>{{e.TheSim}}</td>
                            <td><a href="/Admin/ManagerPhone/UpdatePhone?id={{e.MaDienThoai}}"><i class="fas fa-edit"></i></a></td>
                            <td><button class="btn_remove" ng-click="deleteDT(e.MaDienThoai)"><i class="far fa-trash-alt"></i></button></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <table class="table table-bordered">
        <tfoot>
            <tr>
                <td align="center" colspan="8">
                    <div>
                        <div style="display:flex;justify-content:space-between;align-items:center" class="col-xs-pull-6">

                            <pagination total-items="totalcount" ng-change="pagechangedsp()" items-per-page="pageSize" direction-links="true" ng-model="pageIndex" max-size="maxsize" class="pagination" boundary-links="true" rotate="false" num-pages="numPages"></pagination>

                            <a class=" btn btn-primary pull-right">Page: {{pageIndex}} / {{numPages}}</a>

                        </div>

                    </div>

                </td>

            </tr>

        </tfoot>
        <thead>
            <tr>
                <td class="header-table" colspan="12">

                    <span class="form-group pull-left page-size form-inline">

                        <select class="form-control control-color"
                                ng-model="pageSize"
                                ng-change="changePageSizesp()">
                            <option value="3">3</option>

                            <option value="5">5</option>

                            <option value="7">7</option>

                            <option value="10">10</option>

                        </select>

                    </span>
                </td>
            </tr>
        </thead>
    </table>
</div>




