
@{
    ViewBag.Title = "AddTypePhone";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .back-add-type {
            z-index: 4;
            padding-top: 20px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
        }

        .import-product-type {
            width: 60%;
            /*margin: 0 auto;*/
            background-color: #F5F5F5;
        }

        .product-type-input {
            padding: 0px 10px;
            width: 80%;
            height: 20px;
            border-radius: 4px;
            border: none;
            outline: none;
        }

        tr {
            font-size: 18px;
            height: 40px;
            padding: 12px 5px;
        }

        .btn_add {
            outline: none;
            border: none;
            background-color: rgba(0,0,0,0.2);
            color: white;
            border-radius: 15px;
            width: 5em;
        }
    </style>
    <script src="~/Assets/Admin/script/angular.min.js"></script>
    <script src="~/Assets/Admin/script/AngularController/HomeController.js"></script>

</head>
<body>
    <div class="back-add-type" @*ng-app="Homeapp"*@ ng-controller="AddTypePhone">
        <div class="import-product-type">
            <table style="width:100%;text-align:center">
                <tr class="row-list">
                    <td>Thông tin</td>
                    <td><a href="/Admin/ManagerTypePhone/ManagerTypePhone">Quay lại</a></td>
                </tr>
                <tr class="row-list">
                    <td class="lable-product-type">Tên loại sản phẩm</td>
                    <td>
                        <input type="text" class="product-type-input" id="name_type" name="name" ng-model="LoaiDT.TenLoai">
                    </td>
                </tr>
                <tr class="row-list">
                    <td class="lable-product-type">Xuất xứ</td>
                    <td>
                        <input type="text" class="product-type-input" id="description_type" name="origin" ng-model="LoaiDT.XuatXu">
                    </td>
                </tr>
                <tr>
                    <td>@*<button ng-click="savedata()" class="btn_add">Thêm</button>*@
                    <input type="button" value="{{btntextadd}}" ng-click="savedata()" />
                    </td>
                    <td></td>
                </tr>
            </table>
        </div>
    </div>

</body>

</html>

