
@{
    ViewBag.Title = "UpdateTypePhone";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .back-add-type {
        z-index: 4;
        padding-top: 20px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
    }

    .import-product-type {
        width: 60%;
        background-color: #F5F5F5;
    }

    .product-type-input {
        padding: 0px 10px;
        width: 80%;
        height: 20px;
        border-radius: 4px;
        border: none;
        outline: none;
    }

    tr {
        font-size: 18px;
        height: 40px;
        padding: 12px 5px;
    }

    .btn_add {
        border: none;
        background-color: rgba(0,0,0,0.2);
        color: white;
        border-radius: 15px;
        width: 5em;
    }
</style>
<div class="back-add-type" ng-app="Homeapp" ng-controller="UpdateTypePhone" data-ng-init="LoadLoaiDT(@Convert.ToInt32(Request.QueryString["id"]))">
    <div class="import-product-type">
        <table style="width:100%;text-align:center">
            <tr class="row-list">
                <td>Thông tin</td>
                <td><a href="/Admin/ManagerTypePhone/ManagerTypePhone">Quay lại</a></td>
            </tr>

            <tr class="row-list">
                <td class="lable-product-type">Tên loại sản phẩm</td>
                <td>
                    <input type="text" class="product-type-input" name="name" ng-model="LoaiDT.TenLoai">
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Xuất xứ</td>
                <td>
                    <input type="text" class="product-type-input" name="origin" ng-model="LoaiDT.XuatXu">
                </td>
            </tr>
            <tr>
                <td><input type="button" ng-click="updateLoaiDT()" value="{{btnupdate}}" /></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>

