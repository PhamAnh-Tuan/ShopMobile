
@{
    ViewBag.Title = "UpdateTypePhone";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<link href="~/Assets/Admin/css/scud.css" rel="stylesheet" />
<div class="back-add-type" ng-app="Homeapp" ng-controller="UpdateTypePhone" data-ng-init="LoadLoaiDT(@Convert.ToInt32(Request.QueryString["id"]))">
    <div class="import-product-type">
        <table style="width:100%;text-align:center">
            <tr class="row-list">
                <td>Thông tin</td>
                <td><a href="/Admin/ManagerTypePhone/ManagerTypePhone">Quay lại</a></td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Tên loại sản phẩm</td>
                <td>
                    <input type="text" class="product-type-input" name="name" ng-model="LoaiDT.TenLoai">
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Xuất xứ</td>
                <td>
                    <input type="text" class="product-type-input" name="origin" ng-model="LoaiDT.XuatXu">
                </td>
            </tr>
            <tr>
                <td><input type="button" ng-click="updateLoaiDT()" value="{{btnupdate}}" /></td>
                <td></td>
            </tr>
        </table>
    </div>
</div>

