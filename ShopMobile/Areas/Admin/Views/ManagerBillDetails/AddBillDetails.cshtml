
@{
    ViewBag.Title = "AddBillDetails";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="back-add-type" ng-controller="BillDetailsController">
    <div class="import-product-type">
        <table style="width:100%;text-align:center">
            <tr class="row-list">
                <td>Thông tin</td>
                <td><a href="/Admin/ManagerSupplier/Index">Quay lại</a></td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Mã hóa đơn</td>
                <td>
                    <select ng-model="ct.MaHoaDonNhap" class="select-code">
                        <option ng-repeat="e in databill" @*value="{{e.MaHoaDon}}"*@ title="">{{e.MaHoaDonNhap}}</option>
                    </select>
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Mã cấu hình</td>
                <td>
                    <select ng-model="ct.MaCauHinh" class="select-code">
                        <option ng-repeat="e in ma" value="{{e.MaCauHinh}}" title="{{e.Ram}}GB/{{e.BoNhoTrong}}GB/{{e.Gia|number}}đ">{{e.MaDienThoai}}</option>
                    </select>
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Số lượng</td>
                <td>
                    <input type="text" class="product-type-input" ng-model="ct.SoLuong">
                </td>
            </tr>
            <tr class="row-list">
                <td class="lable-product-type">Đơn giá</td>
                <td>
                    <input type="text" class="product-type-input" ng-model="ct.DonGia">
                </td>
            </tr>          
            <tr>
                <td>
                    <button class="btn-add" ng-click="save()"><i class="fas fa-plus"></i>Thêm mới</button>
                </td>
                <td></td>
            </tr>
        </table>
    </div>
</div>


