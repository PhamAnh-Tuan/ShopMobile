
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="contain-table" ng-controller="NewsController">
    <div class="section-product_type" id="Id-product-type">
        <div class="product_type_list">
            <div class="add-product-type">
                <ul class="nav-search">
                    <h3>Tin Tức</h3>
                    <li>
                        <a href="/Admin/ManagerNews/AddNews">
                            <button type="button" id="Id_add_type" class="btn_add button-add-type color-green">
                                <svg class="svg-type">
                                    <rect class="rect-type" x="0" y="0" fill="none" width="100%" height="100%" />
                                </svg>Thêm tin tức
                            </button>
                        </a>
                    </li>
                    <li>
                        <input type="text" class="form-search form-control" placeholder="Search" ng-model="searchText">
                        <i class="fas fa-search"></i>
                    </li>
                </ul>
            </div>
            <div class="product_type_cen">
                <form>
                    <table class="table-product_type" id="table_type">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Ảnh</th>
                            <th>Nội dung</th>
                            <th>Ngày đăng</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                        <tr ng-repeat="e in datanew  | filter: searchText  " ng-class-even="even" ng-class-odd="odd">
                            <td>{{e.TieuDe}}</td>
                            <td><img src="~/Assets/Client/img/News/{{e.Anh}}" style="width:100px;height:100px" /></td>
                            <td>{{e.NoiDung}}</td>
                            <td>{{e.NgayDang}}</td>
                            <td><a href="/Admin/ManagerNews/UpdateNews?id={{e.MaTinTuc}}"><i class="fas fa-edit"></i></a></td>
                            <td><button class="btn_remove" ng-click="deleteNews(e.MaTinTuc)"><i class="far fa-trash-alt"></i></button></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <table class="table table-bordered">
        <tfoot>
            <tr>
                <td align="center" colspan="8">
                    <div>
                        <div style="display:flex;justify-content:space-between;align-items:center" class="col-xs-pull-6">

                            <pagination total-items="totalcount" ng-change="pagechanged()" items-per-page="pageSize" direction-links="true" ng-model="pageIndex" max-size="maxsize" class="pagination" boundary-links="true" rotate="false" num-pages="numPages"></pagination>

                            <a class=" btn btn-primary pull-right">Page: {{pageIndex}} / {{numPages}}</a>

                        </div>

                    </div>

                </td>

            </tr>

        </tfoot>
        <thead>
            <tr>
                <td class="header-table" colspan="12">

                    <span class="form-group pull-left page-size form-inline">

                        <select class="form-control control-color"
                                ng-model="pageSize"
                                ng-change="changePageSize()">
                            <option value="1">1</option>

                            <option value="5">5</option>

                        </select>

                    </span>
                </td>
            </tr>
        </thead>
    </table>
</div>

