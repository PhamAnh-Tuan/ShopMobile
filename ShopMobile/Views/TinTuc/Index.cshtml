
@{
    ViewBag.Title = "Tin tức công nghệ cập nhật 24h - anhtuanmobile.com";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="columns-container">
    <div class="container" id="columns">
        <!-- row -->
        <div class="row">
            <!-- Left colunm -->
            <div class="column col-xs-12 col-sm-4" id="left_column">
                <!-- block video -->
                <div class="block left-module">
                    <p class="title_block"><span class="fa fa-video-camera"></span>  VIDEOS</p>
                    <div class="block_content">
                        <iframe title="M1 Mac Mini Teardown Disassembly 2020 (M1 close-up in description)" width="100%" height="300" src="https://www.youtube.com/embed/R4ArjHz4gd4?feature=oembed" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
                    </div>
                    <div class="block_content">
                        <iframe title="So sánh Camera iPhone 12 vs iPhone 11 - Hơn Thua nhờ bạn xem đánh giá" width="100%" height="300" src="https://www.youtube.com/embed/pshwSIH8RNQ?feature=oembed" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen=""></iframe>
                    </div>
                </div>
                <!-- ./block video  -->
            </div>

            <!-- ./left colunm -->
            <!-- Center colunm-->
            <div class="center_column col-xs-12 col-sm-8" id="center_column">
                <!-- page heading-->
                <h2 class="page-heading">
                    <span class="page-heading-title"><span class="fa fa-newspaper-o"></span> Tin tức</span>
                </h2>
                <!-- ../page heading-->
                <ul class="blog-posts" ng-controller="NewsController">
                    <li class="post-item" dir-paginate="e in news|itemsPerPage:3" @*ng-class-even="even" ng-class-odd="odd"*@>
                        <article class="entry">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="entry-thumb image-hover2">
                                        <a>
                                            <img src="~/Assets/Client/img/News/{{e.Anh}}" alt="News">
                                        </a>
                                    </div>
                                </div>
                                <div class="col-sm-9">
                                    <div class="entry-ci">
                                        <h3 class="entry-title"><a href="/TinTuc/View_TinTuc?news={{e.MaTinTuc}}">{{e.TieuDe}} </a></h3>

                                        <div class="entry-meta-data">
                                            <span class="author">
                                                <i class="fa fa-user"></i>
                                                by: <a href="#"> Admin</a>
                                            </span>
                                            <span class="date"><i class="fa fa-calendar"></i> August 4, 2016 AT 1:30 PM </span>
                                        </div>
                                        <div class="entry-excerpt">
                                            {{e.NoiDung}}
                                        </div>
                                        @*<div class="entry-more">
                                            <a href="how-coconut-oil-may-rescue.html">Read more</a>
                                        </div>*@
                                    </div>
                                </div>
                            </div>
                        </article>
                    </li>
                </ul>
                <div class="sortPagiBar">
                    <div class="bottom-pagination">
                        <dir-pagination-control max-size="5"
                                                direction-links="true"
                                                border-links="true">
                        </dir-pagination-control>
                    </div>
                </div>
            </div>
            <!-- ./ Center colunm -->
        </div>
        <!-- ./row-->
    </div>
</div>

